.swiper-container {
  width: 750rpx;
  height: 375rpx;
}

.swiper-container .swiper1 {
  width: 100%;
  height: 100%;
}

.swiper-container .swiper1 image {
  width: 100%;
  height: 100%;
}

.category-box {
  display: flex;
  flex-wrap: wrap;
  width: 700rpx;
  box-shadow: 0px 0px 18px 0px rgba(5, 5, 5, 0.15);
  margin-left: 25rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  border-radius: 10px;
}

.category-list {
  margin: 20rpx;
}

.category-imgbox {
  width: 100rpx;
  height: 100rpx;
}

.category-title {
  font-size: 24rpx;
  text-align: center;
}

.notice-box {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #efeff4;
}

.notice-icon {
  width: 130rpx;
  height: 33rpx;
  margin-right: 10px;
}

.live-banner {
  margin-top: 32rpx;
  width: 696rpx;
  margin-left: 27rpx;
  height: 279rpx;
  background: #D8D8D8;
  border-radius: 18px;
}